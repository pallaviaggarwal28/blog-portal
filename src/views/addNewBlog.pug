doctype html
head
    meta(charset='UTF-8')
    title Blog Portal - Add new Blog
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
.container
    .row
        .col-md-4.offset-md-4
            .login-form.bg-light.mt-4.p-4
                form.form-horizontal(action='/api/createBlog' method='post')
                    h2.text-center Add New Blog
                    .col-12
                        label.form-label(for='blogTitle') Title
                        input#blogTitle.form-control(type='text' name='blog_title' required='' minlength='4')
                    br
                    .col-12
                        label.form-label(for='blogContent') Content
                        textarea#blogContent.form-control(name='blog_content' required='' minlength='10')
                    br
                    .col-12
                        button#submit.btn.btn-primary(type='submit' style='margin-right: 16px') Save
                        button.btn.btn-primary(type='cancel' onclick="location.href='/myBlogs'") Cancel
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
